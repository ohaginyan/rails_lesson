<p id="notice"><%= notice %></p>

<h1>Ideas</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td class="col-sm-2"><%= idea.name %></td>
        <td class="col-sm-4"><%= idea.description %></td>
        <td class="col-sm-3"><%= idea.picture %></td>
        <td class="col-sm-1"><%= link_to '表示', idea %></td>
        <td class="col-sm-1"><%= link_to '編集', edit_idea_path(idea) %></td>
        <td class="col-sm-1"><%= link_to '削除', idea, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Idea', new_idea_path %>
